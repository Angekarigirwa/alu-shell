#!/bin/bash

PID_FILE="/var/run/my_process.pid"

start() {
    echo "Starting manage_my_process..."
    ./manage_my_process &  # Start the process in the background
    echo $! > "$PID_FILE"  # Save the PID to the file
    echo "Process started with PID $(cat $PID_FILE)"
}

stop() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        echo "Stopping process $PID..."
        kill "$PID" 2>/dev/null  # Stop the process
        rm -f "$PID_FILE"        # Remove the PID file
        echo "Process stopped and PID file deleted."
    else
        echo "No PID file found. Process may not be running."
    fi
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        sleep 1
        start
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac
